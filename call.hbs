<div class="modal fade" id="callModal" tabindex="-1" role="dialog" aria-labelledby="callModal"
    style="padding-right: 15px; display: block;" aria-modal="true">
    <div class="modal-dialog modal-dialog-centered" role="document" style="top:-15%;">
        <div class="modal-content">
            <div class="modal-header" id="callHeader">
                <h5 class="modal-title" id="callLabel">Titulo de llamada</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body" id="callModalMessage">
                Mensaje
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="callSecondary" data-dismiss="modal">Segunda
                    accion</button>
                <button type="button" class="btn btn-primary btn-delete" id="callConfirm"
                    data-id="5e00f28ea6887b001727f7d2">Confirmacion</button>
            </div>
        </div>
    </div>
</div>
<script>
    function setCallModal(attr) {
        $('#callHeader').toggleClass(attr.color || "")
        $('#callLabel').toggleClass(attr.textColor || " ")
        $('#callLabel').text(attr.message || "TITULO")
        $('#callModalMessage').text(attr.message || "Mensaje de llamado")

        $('#callConfirm').toggleClass(attr.confirmColor || " ")
        $('#callConfirm').text(attr.confirmText || "Confirmacion")
        $('#callConfirm').attr("data-id", attr.dataId)

        $('#callSecondary').toggleClass(attr.secondaryColor || " ")
        $('#callSecondary').text(attr.secondaryText || "Cerrar")
        $('#callModalMessage').text(attr.message || "")
        $('#callModal').modal('show')

    }
    const atributes = {
        message: "Desea eliminar",
        title: "Eliminar",
        color: "bg-warning",
        textColor: "text-white",
        confirmColor: 'bg-danger',
        confirmText: "eliminar",
        secondaryColor: "bg-danger",
        dataId: "4543h03nf03n403fn"
    }
    setCallModal(atributes)
</script>